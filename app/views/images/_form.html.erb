<% if current_user.email === "isorme1@gmail.com" || current_user.email === "ggorme@gmail.com" %>
  <div class="container">
    <h1 style="color:white;">Choose a Title/Date/File to Upload To Your Gallery!</h1><br />
    <%= form_for @image do |f| %>
      <div class="form-field" style="margin-top:20px;">
        <%= f.label :title, style: "color:white;" %>
        <%= f.text_field :title %>
      </div><br />
        <div class="form-field">
          <%= f.label :date, style: "color:white;"%>
          <%= f.date_field :date %>
        </div><br />
        <div class="form-field">
          <%= f.label :description, style: "color:white;"%>
          <%= f.text_area :description %>
        </div><br />
        <div class="form-field">
          <%= f.file_field :image, style: "color:white;" %>
        </div><br />
        <div class="form-field">
          <%= f.submit "Add Image To Gallery!", class: "btn btn-success" %>
        </div>
    <% end %>
  </div>
<% end %>
